    _arguments \
        "--repeat=[Repat the <message> any number of times]"
}

function _dpmgr_list-templates {
    _arguments \
        "--repeat=[Repat the <message> any number of times]"
}

function _dpmgr_rename-template {
    _arguments \
        "--repeat=[Repat the <message> any number of times]"
}

